<div class="product-page">
  <div class="wrapper background-blue">
    <div class="header">

      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="product-image">
              <a href="#">
                <%= render_product_image_origin(@product) %>
              </a>
            </div>
          </div>
          <div class="col-md-5 col-md-offset-1">
            <div class="pay-area">
              <div class="text-center">
                <h1 itemprop="name" class="product-name">
                  <%= @product.title %>
                </h1>

                <h5 class="tagline">
                  <%= @product.description %>
                </h5>

                <h4 class="product-price">
                  <small>￥</small>
                  <%= render_price(@product.price) %>
                </h4>

                <div class="tagline">
                  本期剩余名额 :
                  <span>
                    <%= @product.quantity == 0 ? '已报满' : @product.quantity %>
                  </span>
                </div>
                <!-- 商品操作表单，提交加入购物车或立即下单的数据 -->
                <%= simple_form_for @product, method: :post, remote: true, url: operations_product_path(@product) do |f| %>
                  <!-- 商品数量 -->
                  <div class="buy-quantity">
                    <%= link_to(mi.remove, "", id: "quantity-minus", class: "quantity-minus btn btn-white btn-sm btn-simple disabled") %>
                    <%= f.input_field "", name: "quantity", value: 1, max: @product.quantity, id: "quantity-input", class: "quantity-input" %>
                    <%= link_to(mi.add, "", id: "quantity-plus", class: "quantity-plus btn btn-white btn-sm btn-simple #{@product.quantity <= 1 ? 'disabled' : ''}") %>
                  </div>
                  <!-- 操作按钮，加入购物车及立即下单 -->
                  <div class="operations">
                    <button type="submit" name="commit" value="add_to_cart" class="btn btn-warning btn-wd btn-round <%= @product.quantity == 0 ? 'disabled' : '' %>">
                      <%= fa_icon("cart-arrow-down", text: "加入购物车") %>
                    </button>
                    <button type="submit" name="commit" value="order_now" class="btn btn-danger btn-wd btn-round <%= @product.quantity == 0 ? 'disabled' : '' %>">
                      立刻下单
                    </button>
                  </div>
                  <!-- 收藏按钮 -->
                  <span id="favorite">
                    <%= render "products/favorites", product: @product %>
                  </span>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="profile-page">
    <div class="main main-raised">
      <div class="profile-content">
        <div class="container">
          <div class="section section-basic">
            <div class="row">
              <div class="profile-tabs">
                <div class="nav-align-center">
                  <ul class="nav nav-pills nav-pills-info" role="tablist">
                    
                    <li class="active">
                      <a href="#intro" role="tab" data-toggle="tab">
                        <i class="material-icons">dashboard</i>
                        介绍
                      </a>
                    </li>
                    <li>
                      <a href="#catalog" role="tab" data-toggle="tab">
                        <i class="material-icons">schedule</i>
                        清单
                      </a>
                    </li>
                    <li>
                      <a href="#teacher" role="tab" data-toggle="tab">
                        <i class="material-icons">list</i>
                        提供者
                      </a>
                    </li>
                  </ul>

                  <div class="tab-content gallery">
                    <!-- 课程介绍 -->
                    <div class="tab-pane active" id="intro">
                      <div class="section">
                        <div class="container ">
                          <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 text-left">
                              <h2><%= @product.title %></h2>
                              <h4 class="text"><%= @product.description %></h4>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- 课程目录 -->
                    <div class="tab-pane" id="catalog">
                      <div class="section">
                        <div class="container ">
                          <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 text-center">
                              <h2><%= @product.title %></h2>
                              <h4 class="text"><%= @product.catalog %></h4>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- 讲师介绍 -->
                    <div class="tab-pane" id="teacher">
                      <div class="profile">
                        <div class="avatar" style="margin-top: 150px;">
                          <img src="https://tva4.sinaimg.cn/crop.0.0.180.180.180/62291a6ejw1e8qgp5bmzyj2050050aa8.jpg" alt="shell" class="img-circle img-responsive img-raised">
                        </div>
                        <div class="name">
                          <h3 class="title">shell</h3>
                          <h6>Engineer</h6>
                        </div>
                      </div>

                      <div class="container">
                        <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 text-center">
                          <h5 class="text">行到水穷处,坐看云起时</h5>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
